<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_documento_convenio_form" model="ir.ui.view">
        <field name="name">documento.convenio.form</field>
        <field name="model">documento.convenio</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group string="Información general">
                            <field name="name" />
                            <field name="entidad" />
                            <field name="estado" />
                        </group>
                        <group string="Detalle">
                            <field name="inicio" />
                            <field name="fin" />
                            <field name="dias_faltantes" />
                            <!-- <field name="curso_relacionado" /> -->
                        </group>
                    </group>
                    <group>
                        <group string="Datos">
                            <field name="contacto_ids">
                                <tree editable="bottom">
                                    <field name="cargo" />
                                    <field name="contacto" />
                                </tree>
                            </field>
                        </group>
                        <group></group>
                    </group>
                    <group string="Subir y ver documento">  
                        <field name="documento" filename="name_documento" widget="pdf_viewer" />
                        <field name="name_documento" invisible="1" />
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="activity_ids" widget="mail_activity" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

    <record id="view_documento_convenio_tree" model="ir.ui.view">
        <field name="name">documento.convenio.tree</field>
        <field name="model">documento.convenio</field>
        <field name="arch" type="xml">
            <tree string="Documentos">
                <field name="name" />
                <field name="entidad" />
                <field name="inicio" />
                <field name="fin" />
                <field name="estado" widget="badge"
                decoration-warning="estado == 'vencer'"
                decoration-danger="estado == 'vencido'"
                decoration-info="estado == 'coordinacion'"
                decoration-success="estado == 'vigente'"/>
            </tree>
        </field>
    </record>

    <record id="view_documento_convenio_kanban" model="ir.ui.view">
        <field name="name">documento.convenio.kanban</field>
        <field name="model">documento.convenio</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_documents">
                <field name="id"/>
                <field name="name"/>
                <field name="entidad"/>
                <field name="fin"/>
                <field name="estado"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_title oe_partner_heading">
                                            <field name="name" />
                                        </strong>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <span class="float-right text-right">
                                            <field name="estado" widget="label_selection" options="{
                                                'classes': {
                                                    'vigente': 'success',
                                                    'vencer': 'warning'
                                                }
                                            }"/>
                                        </span>
                                    </div>
                                </div>
                                <div class="oe_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="entidad" />
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="fin" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record id="view_documento_convenio_search" model="ir.ui.view">
        <field name="name">documento.convenio.search</field>
        <field name="model">documento.convenio</field>
        <field name="arch" type="xml">
            <search>
                <!-- Añadir campos para búsqueda -->
                <field name="name" string="Nombre del documento"/>
                <field name="entidad" string="Entidad"/>
                <field name="estado" string="Estado"/>
            </search>
        </field>
    </record>
    <record id="action_documento_convenio" model="ir.actions.act_window">
        <field name="name">Convenios</field>
        <field name="res_model">documento.convenio</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Sube el primer convenio
            </p>
        </field>
    </record>

</odoo>